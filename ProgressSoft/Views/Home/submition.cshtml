@model IList<ProgressSoft.Models.BusinessCard>
@{
    ViewBag.Title = "submition";
}

<h2>submition</h2>
<link href="~/Content/_custom.css" rel="stylesheet" />
@using (Html.BeginForm("save", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <center>
        <div class="row">
            @for (int i= 0; i< Model.Count;i++)
            {

                <div class="col-sm-4">
                    <div class="shadow p-3 mb-5 bg-white rounded" style="margin-top:50px;">
                        <div class="card" style="width: 18rem;">
                            <img src="~/Images/@Model[i].Photo.ToString()" class="card-img-top" alt="..." width="60" height="150">
                            @Html.HiddenFor(modelItem => Model[i].Photo)
                            <div class="card-body">
                                <h5 class="card-title"> @Model[i].Name</h5>
                                @Html.HiddenFor(modelItem => Model[i].CustomerId)
                                <ul class="card-text" style="font-size:small; text-align:left;">
                                    <li>
                                        Name : @Model[i].Name
                                        @Html.HiddenFor(modelItem => Model[i].Name)
                                    </li>
                                    <li>
                                        DOB : @Model[i].DOB.ToShortDateString();
                                        @Html.HiddenFor(modelItem => Model[i].DOB)
                                    </li>
                                    <li>
                                        Gender : @Model[i].Gender
                                        @Html.HiddenFor(modelItem => Model[i].Gender)
                                    </li>
                                    <li>
                                        Phone : @Model[i].Phone
                                        @Html.HiddenFor(modelItem => Model[i].Phone)
                                    </li>
                                    <li>
                                        Email : @Model[i].Email
                                        @Html.HiddenFor(modelItem => Model[i].Email)
                                    </li>
                                    <li>
                                        Address : @Model[i].Address
                                        @Html.HiddenFor(modelItem => Model[i].Address)
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>


            }
        </div>
    </center>
    <div>
        <center>
            <div>

                <input type="submit" value="Save" class="btn btn-primary">
                <button class="btn btn-primary" onclick="location.href='@Url.Action("New_business_cards", "Home")';return false;">Cancel </button>



            </div>
        </center>
    </div>
